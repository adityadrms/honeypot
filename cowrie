#!/bin/bash

# Update the system
echo "Updating system..."
sudo apt-get update

# Install dependencies
echo "Installing dependencies..."
sudo apt-get install -y git python3 python3-venv python3-dev libssl-dev libffi-dev build-essential libpython3-dev

# Create a user for Cowrie
echo "Creating a user for Cowrie..."
sudo adduser --disabled-password --gecos "" cowrie

# Switch to the cowrie user
echo "Switching to the cowrie user..."
sudo su - cowrie << 'EOF'

# Clone the Cowrie repository
echo "Cloning the Cowrie repository..."
sudo -u cowrie git clone https://github.com/cowrie/cowrie

# Navigate to the Cowrie directory
sudo -u cowrie cd cowrie

# Create a virtual environment
echo "Creating a virtual environment..."
sudo -u cowrie python3 -m venv cowrie-env

# Activate the virtual environment
sudo -u cowrie source cowrie-env/bin/activate

# Install the necessary Python packages
echo "Installing Python packages..."
sudo -u cowrie pip install --upgrade pip
sudo -u cowrie pip install -r requirements.txt

# Copy the configuration file and edit it
echo "Setting up configuration..."
sudo -u cowrie cp etc/cowrie.cfg.dist etc/cowrie.cfg
sudo -u cowrie bin/cowrie start
