#!/bin/bash

# Cowrie Installation and Running Script

# Update system
echo "Updating system..."
sudo apt update -y && sudo apt upgrade -y

# Install dependencies
echo "Installing dependencies..."
sudo apt-get install -y git python3-virtualenv libssl-dev libffi-dev build-essential libpython3-dev python3-minimal authbind virtualenv

# Create user for Cowrie
echo "Creating user for Cowrie..."
sudo adduser --disabled-password --gecos "" cowrie

# Clone Cowrie repository
echo "Cloning Cowrie repository..."
sudo -u cowrie git clone https://github.com/cowrie/cowrie /home/cowrie/cowrie

# Change to Cowrie directory
cd /home/cowrie/cowrie || exit

# Set up virtual environment
echo "Setting up virtual environment..."
sudo -u cowrie /bin/bash -c 'python3 -m venv cowrie-env'

# Activate virtual environment and install dependencies
echo "Installing Python dependencies..."
sudo -u cowrie /bin/bash -c 'source /home/cowrie/cowrie/cowrie-env/bin/activate && pip install --upgrade pip'
sudo -u cowrie /bin/bash -c 'source /home/cowrie/cowrie/cowrie-env/bin/activate && pip install --upgrade -r /home/cowrie/cowrie/requirements.txt'

# Copy configuration file
echo "Copying configuration file..."
sudo -u cowrie /bin/bash -c 'cp /home/cowrie/cowrie/etc/cowrie.cfg.dist /home/cowrie/cowrie/etc/cowrie.cfg'

# Start Cowrie
echo "Starting Cowrie..."
sudo -u cowrie /bin/bash -c 'source /home/cowrie/cowrie/cowrie-env/bin/activate && /home/cowrie/cowrie/bin/cowrie start'

echo "Cowrie installation and setup completed."
